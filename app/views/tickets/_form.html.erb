<%= form_for @tickets, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :ticket_title, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :ticket_title, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :stamp, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :stamp, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email_customer, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.email_field :email_customer, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tijd_gemeld, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.time_select :tijd_gemeld, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  tickets_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
