<%- model_class = Tickets -%>
<div class="page-header">
  <h1><%=t '.title', :default => Tickets %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:ticket_title) %></th>
      <th><%= model_class.human_attribute_name(:stamp) %></th>
      <th><%= model_class.human_attribute_name(:email_customer) %></th>
      <th><%= model_class.human_attribute_name(:tijd_gemeld) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tickets.each do |tickets| %>
      <tr>
        <td><%= tickets.id %></td>
        <td><%= tickets.ticket_title %></td>
        <td><%= tickets.stamp %></td>
        <td><%= tickets.email_customer %></td>
        <td><%= tickets.tijd_gemeld %></td>
        <td><%=l tickets.created_at, format: :long %></td>
        <td>
          <%= link_to tickets_path(tickets), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to tickets_path(tickets), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tickets_path,
            :class => 'btn btn-primary' %>
